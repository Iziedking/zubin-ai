# ==============================================================================
# Storage Configuration (S3 + goofys)
# ==============================================================================
STORAGE_BASE_PATH=/opt/sentient
ROMA_S3_BUCKET=roma-shared
AWS_REGION=us-east-1

# ==============================================================================
# AWS Credentials
# ==============================================================================
AWS_ACCESS_KEY_ID=your_actual_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_actual_aws_secret_access_key

# ==============================================================================
# Search & Graph APIs
# ==============================================================================
EXA_API_KEY=your_exa_api_key_here
GRAPH_API_KEY=your_graph_api_key_here
SERPER_API_KEY=your_serper_api_key_if_you_have_one

# ==============================================================================
# LLM API Keys
# ==============================================================================
OPENAI_API_KEY=your_openai_api_key_if_needed

ANTHROPIC_API_KEY=your_anthropic_api_key_if_needed
GOOGLE_API_KEY=your_google_api_key_if_needed
FIREWORKS_API_KEY=your_fireworks_api_key_if_needed

# OpenRouter (RECOMMENDED - single key for multiple models)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ==============================================================================
# POLYMARKET CREDENTIALS (ADD THESE!)
# ==============================================================================
POLYMARKET_API_KEY=your_polymarket_api_key_here
POLYMARKET_SECRET=your_polymarket_secret_here
POLYMARKET_PRIVATE_KEY=your_polymarket_private_key_here
POLYMARKET_CHAIN_ID=137
POLYMARKET_RPC_URL=https://polygon-rpc.com

# ==============================================================================
# E2B Configuration (Code Execution Sandbox)
# ==============================================================================
E2B_API_KEY=your_e2b_api_key_if_needed
E2B_TEMPLATE_ID=roma-dspy-sandbox
E2B_TIMEOUT=300

# ==============================================================================
# Crypto/Finance API Keys (Optional but useful)
# ==============================================================================
DEFILLAMA_API_KEY=your_defillama_api_key
ARKHAM_API_KEY=your_arkham_api_key
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret
COINGECKO_API_KEY=your_coingecko_api_key

# ==============================================================================
# Database Configuration (PostgreSQL) - FOR DOCKER
# ==============================================================================
POSTGRES_ENABLED=true
POSTGRES_DB=roma_dspy
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# docker postgres name
DATABASE_URL=postgresql+asyncpg://postgres:your_postgres_password_here@postgres:5432/roma_dspy

POSTGRES_POOL_SIZE=5
POSTGRES_MAX_OVERFLOW=10
POSTGRES_POOL_TIMEOUT=30.0
SQL_ECHO=false

# ==============================================================================
# MinIO Configuration (S3-compatible storage)
# ==============================================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# ==============================================================================
# API Server Configuration - PRODUCTION
# ==============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# ==============================================================================
# ROMA-DSPy Runtime Configuration - PRODUCTION
#
==============================================================================
ROMA_ENV=production
ROMA_MAX_DEPTH=5
ROMA_VERBOSE=false
ROMA_ENABLE_LOGGING=true

# ==============================================================================
# Resilience Configuration
# ==============================================================================
ROMA_RETRY_ENABLED=true
ROMA_MAX_RETRIES=3
ROMA_RETRY_STRATEGY=exponential_backoff
ROMA_CIRCUIT_BREAKER_ENABLED=true
ROMA_FAILURE_THRESHOLD=5

# ==============================================================================
# Cache Configuration
# ==============================================================================
ROMA_CACHE_ENABLED=true
ROMA_CACHE_DISK=true
ROMA_CACHE_MEMORY=true
DSPY_CACHE_DIR=.cache/dspy

# ==============================================================================
# Checkpoint Configuration
# ==============================================================================
ROMA_CHECKPOINT_ENABLED=true
ROMA_CHECKPOINT_PATH=.checkpoints
ROMA_MAX_CHECKPOINTS=10
ROMA_CHECKPOINT_MAX_AGE_HOURS=24.0
ROMA_CHECKPOINT_COMPRESS=true
ROMA_CHECKPOINT_VERIFY=true

# ==============================================================================
# Logging Configuration - PRODUCTION
# ==============================================================================
LOG_LEVEL=INFO
LOG_DIR=/tmp/logs
LOG_CONSOLE_FORMAT=default
LOG_FILE_FORMAT=detailed
LOG_COLORIZE=false
LOG_SERIALIZE=false
LOG_ROTATION=100 MB
LOG_RETENTION=30 days
LOG_COMPRESSION=zip
LOG_INTERCEPT_STDLIB=true
LOG_BACKTRACE=true
LOG_DIAGNOSE=false
LOG_ENQUEUE=true

# ==============================================================================
# Observability Configuration (MLflow) - FOR DOCKER
# ==============================================================================
MLFLOW_ENABLED=true
ROMA_DISABLE_MLFLOW_SPANS=false

# mflow
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_EXPERIMENT=ROMA-DSPy-Production
MLFLOW_PORT=5000

# MLflow artifact storage (MinIO)
MLFLOW_DEFAULT_ARTIFACT_ROOT=s3://mlflow

# ==============================================================================
# Docker Configuration (Port Mappings)
# ==============================================================================
POSTGRES_PORT=5432
MLFLOW_PORT=5000

# ==============================================================================
# Security Configuration (GENERATE RANDOM SECRETS!)
# ==============================================================================
JWT_SECRET=your_JWT_secret_here
API_KEY=your_API_key_here